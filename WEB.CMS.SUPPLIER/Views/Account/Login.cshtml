
@{
    ViewData["Title"] = "Đăng nhập hệ thống";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    string returnURL = (string)ViewBag.ReturnURL;
}

<style>
    .login-popup .bottom-btn button {
        width: 50%;
        color: #fff;
        height: 43px;
        line-height: 43px;
        text-align: center;
    }
</style>

<div class="login-popup">
    <form id="form-login" data-url="@returnURL">
        <div class="content_lightbox" id="panel-login">
            <div class="head center">
                <div>Đăng nhập hệ thống</div>
                <a class="logo" href="javascripts:;"><img src="~/images/menu/Logo_gọn.png"></a>
            </div>
            <span id="validate-general" class="field-validation-valid text-danger" ></span>
            <div class="form-default">
                <div class="form-group">
                    <input id="user-name" class="form-control" type="text" name="user-name" placeholder="Tên tài khoản" value="">
                    <span id="validate-username" class="field-validation-valid text-danger"></span>
                </div>
                <div class="form-group">
                    <input id="password" class="form-control" type="password" name="user-name" placeholder="Mật khẩu" value="">
                    <span id="validate-password" class="field-validation-valid text-danger"></span>
                </div>
                <div class="form-group mt25 txt_12">
                    <label class="check-list mb10 mr25">
                        <input id="remember-me" name="remember-me" type="checkbox" value="1" />
                        <span class="checkmark"></span>
                        Duy trì đăng nhập
                    </label>
                </div>
                <div class="bottom-btn flex" style="justify-content: center;">
                    <button  class="btn btn-default btn-login" onclick="_login.Login()" style=" background-color: var(--color-main); width:100%;"><i class="fa fa-sign-in"></i>Đăng nhập</button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="/modules/account.js" asp-append-version="true"></script>
}
