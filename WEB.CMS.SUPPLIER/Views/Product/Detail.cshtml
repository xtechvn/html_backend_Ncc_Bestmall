@using Entities.ViewModels.Label
@using Entities.ViewModels.Products
@using HuloToys_Service.Models.Label
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string product_id = (string)ViewBag.ProductId;
    string static_url = (string)ViewBag.Static;
    string group_product = (string)ViewBag.GroupProduct;
    ProductMongoDbModel product = (ProductMongoDbModel)ViewBag.Product;
    Supplier supplier = (Supplier)ViewBag.Supplier;
    Label label = (Label)ViewBag.Label;
    ProductSpecificationDetailMongoDbModel brand = null;
    ProductSpecificationDetailMongoDbModel material = null;
    ProductSpecificationDetailMongoDbModel age_restriction = null;
    ProductSpecificationDetailMongoDbModel date_manuafacter = null;
    ProductSpecificationDetailMongoDbModel manuafacter = null;
    ProductSpecificationDetailMongoDbModel manuafacter_location = null;
    ProductSpecificationDetailMongoDbModel specific_requirement = null;
    if (product != null && product.specification != null && product.specification.Count > 0)
    {
        brand = product.specification.FirstOrDefault(x => x.attribute_id == 1);
        material = product.specification.FirstOrDefault(x => x.attribute_id == 5);
        age_restriction = product.specification.FirstOrDefault(x => x.attribute_id == 2);
        date_manuafacter = product.specification.FirstOrDefault(x => x.attribute_id == 6);
        manuafacter = product.specification.FirstOrDefault(x => x.attribute_id == 3);
        manuafacter_location = product.specification.FirstOrDefault(x => x.attribute_id == 7);
        specific_requirement = product.specification.FirstOrDefault(x => x.attribute_id == 4);
    }
}
