                            {
                                foreach (var url in product.images)
                                {
                                    string url_fixed = url;
                                    if (!url_fixed.Contains(static_url) 
                                    && !url_fixed.Contains("base64")
                                    && !url_fixed.Contains("data:image"))
                                    {
                                        url_fixed = static_url + url;
                                    }
